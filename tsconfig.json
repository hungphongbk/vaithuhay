{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "jsx": "preserve",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": [
      "es7",
      "dom",
      "scripthost",
      "es2015",
      "es2015.promise",
      "es2015.symbol",
      "es2015.symbol.wellknown"
    ],
    "rootDir": "assets-src/",
    "baseUrl": "./assets-src/",
    "paths": {
      "@/*": [
        "js/*"
      ]
    },
    "experimentalDecorators": true,
    "allowJs": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ],
  "include": [
    "assets-src/js/globals.d.ts",
    "assets-src/js/**/*.ts",
    "assets-src/js/**/*.vue"
  ],
  "files": [
    "./typings/index.d.ts",
    "./assets-src/js/globals.d.ts"
  ]
}
