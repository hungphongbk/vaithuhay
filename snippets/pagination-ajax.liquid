<div id="pagination" class="">
	{% if paginate.pages > 1 %}
	<div class="col-lg-2 col-md-2 col-sm-3 hidden-xs">
	</div>
	<div class="col-lg-8 col-md-8 col-sm-6 col-xs-12 text-center">
		{% if paginate.previous %}
		<a class="next fa fa-angle-double-left" href="javascript:void(0);" onclick="getProduct({{ paginate.current_page}} - 1)"><span></span></a>
		{% endif %}
		{%if paginate.current_page > 4%}
		{% assign firstpage = paginate.previous.url  | split: '=' %}
		<a class="page-node" href="{{ firstpage.first |append: '=1'  }}">
			1
		</a>
		<span class="page-node ">â€¦</span>
		{%endif%}
		{%for part in paginate.parts%}
		{%if part.is_link%}
		<a class="page-node" href="javascript:void(0);" onclick="getProduct({{ part.title }})">{{part.title}}</a>
		{%else%}
		<span class="page-node {%if part.title == paginate.current_page%}current{%endif%}"  href="javascript:void(0);" onclick="getProduct({{ part.title }})">{{part.title}}</span>
		{%endif%}
		{%endfor%}
		{% if paginate.next %}
		<a class="prev fa fa-angle-double-right" href="javascript:void(0);" onclick="getProduct({{ paginate.current_page}} + 1)"><span></span></a>
		{% endif %}
	</div>
	<div class="col-lg-2 col-md-2 col-sm-3 hidden-xs">
	</div>
	{% endif %}

</div>