{% layout none %}
{% capture results %}
{% for item in search.results %}
  {% if item.object_type == 'product' %}
    {% assign product = item %}
    {% include 'product-json.src' with product %}
  {% else %}
    {% assign article = item %}
    {% include 'article-json' with article %}
  {% endif %}
{% unless forloop.last %},{% endunless %}
{% endfor %}
{% endcapture %}
{
    "results_count": {{ search.results_count }},
    "results": [{{ results }}]
}
